<Window x:Class="GM_Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GM_Task_Manager"
        xmlns:mainvc="clr-namespace:GM_Task_Manager.GUI.MVVM_Main_Components.View"
        mc:Ignorable="d"
        Title="GM Task Manager"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800" 
        Height="700" Width="1000"  
        Background="#333333"
        ResizeMode="CanResize"
        Closing="Window_Closing" >
    <Grid>
        <!--<ContentControl Content="{Binding MainViewModel, Mode=OneTime}"/>-->
        <mainvc:MainView  x:Name="MainView"/>
    </Grid>
</Window>
